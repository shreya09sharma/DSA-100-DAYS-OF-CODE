#include <stdio.h>

int main() {

    int n;
    printf("Enter size of array: ");
    scanf("%d", &n);

    int nums[n];

    for(int i = 0; i < n; i++) {
        printf("Element %d = ", i+1);
        scanf("%d", &nums[i]);
    }


    for(int i = 0; i < n-1; i++)
    {
        for(int j = 0; j < n-1-i; j++) 
        {
            if(nums[j] > nums[j+1])
            {
                int temp = nums[j];
                nums[j] = nums[j+1];
                nums[j+1] = temp;
            }
        }
    }

    printf("Sorted array:\n");
    for(int i = 0; i < n; i++) {
        printf("%d ", nums[i]);
    }

    int val;
    printf("\nEnter value to remove: ");
    scanf("%d", &val);


    for(int i = 0; i < n; i++) {

        if(nums[i] == val) {

            for(int j = i; j < n-1; j++) {
                nums[j] = nums[j+1];
            }

            n--;   
            i--;   
        }
    }

    int k = n;

    printf("k = %d\n", k);
    printf("Modified array:\n");

    for(int i = 0; i < k; i++) {
        printf("%d ", nums[i]);
    }

    return 0;
}

