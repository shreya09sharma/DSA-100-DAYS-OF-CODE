// Online C compiler to run C program online
#include <stdio.h>

int main() {
    // Write C code here
    int n;
    printf("enter the size of an array\n");
    scanf("%d", &n);
    int arr[n];
    for(int i=0;i<n;i++)
    {
        printf("elements %d =", i+1);
        scanf("%d", &arr[i]);
    }
    int first=0;
    int last=n-1;
    while(first<last)
    {
        int temp=arr[first];
        arr[first]=arr[last];
        arr[last]=temp;
        first++;
        last--;
        
    }
    for(int i=0;i<n;i++)
    {
        printf("The reversed array is\n");
        printf("%d\n", arr[i]);
    }

    return 0;
}
