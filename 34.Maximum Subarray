#include <stdio.h>

int main() {

    int n;

    printf("Enter size of array: ");
    scanf("%d", &n);

    int a[n];

    printf("Enter elements:\n");
    for(int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    int maxSum = a[0];
    int currSum = a[0];

    for(int i = 1; i < n; i++) {

        // Choose max between current element and current sum + element
        if(a[i] > currSum + a[i])
            currSum = a[i];
        else
            currSum = currSum + a[i];

        // Update max sum
        if(currSum > maxSum)
            maxSum = currSum;
    }

    printf("Maximum Subarray Sum = %d\n", maxSum);

    return 0;
}
