#include <stdio.h>

int main() {
    int n;
    int flag = 1;
    printf("Enter order of square matrix: ");
    scanf("%d", &n);
    int a[n][n];
    printf("Enter matrix elements:\n");
    for (int i = 0; i < n; i++) 
    {
        for (int j = 0; j < n; j++)
        {
            scanf("%d", &a[i][j]);
        }
    }

    for (int i = 0; i < n; i++) 
    {
        for (int j = 0; j < n; j++)
        {

            if (i == j && a[i][j] != 1) 
            {
                flag = 0;
                break;
            }

            if (i != j && a[i][j] != 0) 
            {
                flag = 0;
                break;
            }
        }

        if (flag == 0)
            break;
    }

    if (flag == 1)
        printf("It is an Identity Matrix.\n");
    else
        printf("It is NOT an Identity Matrix.\n");

    return 0;
}
